        <TextBox x:Name="t4" HorizontalAlignment="Left" Height="26" Margin="516,34,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="378" FontSize="18"/>
        <TextBlock HorizontalAlignment="Left" Margin="516,65,0,0" TextWrapping="Wrap" Text="Номер сотрудника" VerticalAlignment="Top" Foreground="#FFECECEC" FontWeight="Bold" FontSize="18"/>
