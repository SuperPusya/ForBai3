        <ComboBox x:Name="combo" HorizontalAlignment="Left" Margin="747,153,0,0" VerticalAlignment="Top" Width="135" DropDownClosed="combo_DropDownClosed" DisplayMemberPath="post"/>
        <TextBlock HorizontalAlignment="Left" Margin="516,153,0,0" TextWrapping="Wrap" Text="либо выберите из списка" VerticalAlignment="Top" Foreground="#FFECECEC" FontWeight="Bold" FontSize="18" Width="226"/>
    </Grid>
</Page>
